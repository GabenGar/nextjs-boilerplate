{
  "name": "nextjs-scaffold",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "dev": "next dev",
    "build": "next build",
    "prebuild": "npm run migrate:up",
    "build:dev": "next build",
    "prebuild:dev": "npm run migrate:up:dev",
    "start": "next start",
    "lint": "next lint",
    "migrate": "node-pg-migrate",
    "migrate:create": "node-pg-migrate create -- --migrations-dir src/database/migrations --migration-filename-format utc",
    "migrate:up": "node-pg-migrate up --migrations-dir src/database/migrations --reject-unauthorized false",
    "migrate:up:dev": "node-pg-migrate up --config-file migration-config.json --migrations-dir src/database/migrations --verbose"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "content-type": "^1.0.4",
    "crypto-js": "^4.1.1",
    "date-fns": "^2.28.0",
    "fs-extra": "^10.0.0",
    "iron-session": "^6.0.5",
    "nanoid": "^3.1.32",
    "next": "^12.0.9",
    "node-pg-migrate": "^6.2.1",
    "nodemailer": "^6.7.2",
    "pg": "^8.7.1",
    "pg-promise": "^10.11.1",
    "raw-body": "^2.4.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.22.5",
    "swr": "^1.1.2",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@types/content-type": "^1.1.5",
    "@types/crypto-js": "^4.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "17.0.5",
    "@types/nodemailer": "^6.4.4",
    "@types/react": "17.0.38",
    "@types/validator": "^13.7.1",
    "eslint": "8.5.0",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "prettier": "2.5.1",
    "sass": "^1.45.1",
    "typescript": "4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  }
}
